<UserControl
  x:Class="ClangPowerTools.Views.GeneralSettingsView"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:ClangPowerTools"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  d:DataContext="{d:DesignInstance local:GeneralSettingsViewModel,
                                   IsDesignTimeCreatable=True}"
  d:DesignHeight="350"
  d:DesignWidth="770"
  mc:Ignorable="d">
  <Grid>
    <Grid.Background>
      <ImageBrush ImageSource="/ClangPowerTools;component/Resources/SettingsBackground.png" Stretch="UniformToFill" />
    </Grid.Background>
    <Grid.RowDefinitions>
      <RowDefinition Height="30" />
      <RowDefinition Height="50" />
      <RowDefinition Height="50" />
      <RowDefinition Height="50" />
      <RowDefinition Height="50" />
      <RowDefinition Height="50" />
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>

    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*" />
    </Grid.ColumnDefinitions>


    <!--  Export Settings  -->
    <Button
      Grid.Row="1"
      Grid.Column="0"
      Width="180"
      Height="40"
      Command="{Binding ExportSettingsCommand}"
      Content="Export Settings"
      FontSize="16" />

    <!--  Import Settings  -->
    <Button
      Grid.Row="2"
      Grid.Column="0"
      Width="180"
      Height="40"
      Command="{Binding ImportSettingssCommand}"
      Content="Import Settings"
      FontSize="16" />

    <!--  Reset Settings  -->
    <Button
      Grid.Row="3"
      Grid.Column="0"
      Width="180"
      Height="40"
      Command="{Binding ResetSettingsCommand}"
      Content="Reset Settings"
      FontSize="16" />


    <!--  Logout  -->
    <Button
      Grid.Row="4"
      Grid.Column="0"
      Width="180"
      Height="40"
      Command="{Binding LogoutCommand}"
      Content="Logout"
      FontSize="16" />

    <!--  Upgrade  -->
    <Button
      Grid.Row="5"
      Grid.Column="0"
      Width="180"
      Height="40"
      Background="#FFFFC05E"
      Command="{Binding LogoutCommand}"
      Content="Upgrade"
      FontSize="16" />

    <!--  Version  -->
    <TextBlock
      Grid.Row="6"
      Grid.Column="0"
      HorizontalAlignment="Right"
      VerticalAlignment="Bottom"
      FontFamily="SegoeUI"
      FontSize="10"
      Text="{Binding GeneralSettingsModel.Version}" />



  </Grid>

</UserControl>

